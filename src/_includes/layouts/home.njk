{% extends 'layouts/base.njk' %}
{% set pageType = 'Homepage' %}

{% block content %}
    <img class="home__image" src="/images/soepbroodje.jpg" alt=""/>
    <article class="home__article">
        <h1 class="visually-hidden">Soep aan de singel</h1>
        <div class="home__content">
            <div class="home__intro">
                {% if intro %}<p>{{ intro | safe }}</p>{% endif %}
            </div>
            <div class="home__logo-wrapper">
                <img src="/images/logo.svg" alt="Soep aan de Singel">
            </div>
            {{ textAboveForm | safe }}
            <h2>Aanmelden</h2>
            <form name="aanmelden" netlify>
                <input id="naam" name="naam" type="text" required/>
                <label for="naam">Naam</label>

                <input id="email" name="email" type="email"/>
                <label for="email">Email (optioneel)</label>

                <textarea id="opmerking" name="opmerking"></textarea>
                <label for="opmerking">Opmerking (optioneel)</label>

                <button>Aanmelden</button>
            </form>
            {{ content | safe }}
        </div>
    </article>
{% endblock %}